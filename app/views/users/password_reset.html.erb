
<div class="container">
  <%= form_for(User.new, :url => post_password_reset_path, :html => { :class => 'form-signin', :id => 'login' }) do |f| %>
      <h1 class="h3 mb-3 font-weight-normal">Reset your password</h1>
      <label for="email" class="sr-only">Email address</label>
      <input type="email" name="email" id="email" class="form-control" placeholder="Email address"  required autofocus>
      <button class="btn btn-lg btn-danger btn-block" type="submit">Reset your password</button>
    <% end %>
</div>

