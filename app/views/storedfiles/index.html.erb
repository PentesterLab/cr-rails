<div class="container">
<p id="notice"><%= notice %></p>

<h1>Files</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Path</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @storedfiles.each do |storedfile| %>
      <tr>
        <td><%= storedfile.name %></td>
        <td><%= storedfile.path %></td>
        <td><%= link_to 'Show', storedfile %></td>
        <td><%= link_to 'Destroy', storedfile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New File', new_storedfile_path %>
</div>
